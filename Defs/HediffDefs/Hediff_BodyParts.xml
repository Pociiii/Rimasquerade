<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Fangs -->
 	<HediffDef ParentName="AddedBodyPartBase">
        <defName>RMSQ_Fangs</defName>
        <label>Fangs</label>
        <description>Add a bite attack using your fangs\n\nUsed automatically while using the default Melee Attack</description>
        <defaultInstallPart>Jaw</defaultInstallPart>
		<defaultLabelColor>(255, 215, 0)</defaultLabelColor>
		<countsAsAddedPartOrImplant>false</countsAsAddedPartOrImplant>
		<addedPartProps>
            <solid>true</solid>
        </addedPartProps>
        <comps>
            <li Class="HediffCompProperties_DisappearsOnDeath"/>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li> 
                        <label>fangs</label>
                        <capacities>
                            <li>Bite</li>
                        </capacities>
                        <power>15</power>
                        <cooldownTime>2</cooldownTime>
                        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
                    </li>
                </tools>
            </li>
        </comps>
    </HediffDef>  

</Defs>
